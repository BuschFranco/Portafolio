     /* >>>>>>>>>>>> Animaciones para botones y cargas <<<<<<<<<<<<<<<< */

  .loading-spinner {
    border: 3px solid rgba(255, 255, 255, 0.6);
    border-top: 3px solid rgb(0, 0, 0);
    border-radius: 50%;
