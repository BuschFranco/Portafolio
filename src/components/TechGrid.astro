---

const techs = [
  { name: 'JavaScript', icon: '💻' },
  { name: 'D365 F&O', icon: '💼' },
  { name: 'Astro', icon: '🚀' },
  { name: 'WordPress', icon: '📝' },
  { name: 'Git', icon: '🐈' },
  { name: 'C#', icon: '📦' },
  { name: 'PHP', icon: '🐘' },
  { name: 'SQL', icon: '🗄️' }, 
  { name: 'Tailwind CSS', icon: '🌊' },
  { name: 'Unity', icon: '🎮' },
  { name: 'React', icon: '⚛️' },
  { name: 'Bootstrap', icon: '📚' }, 
  { name: 'X++', icon: '🔧' },
  { name: 'Node.js', icon: '🌲' },
  { name: 'Python', icon: '🐍' }
  
];
---

<style>
  .grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 35px;
    padding: 20px;
    margin-top: 2rem;
  }

  .grid-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 8px;
    text-align: center;
    background-color: #f9f9f9;
    color: #333;

    box-shadow: 0px 0px 15px rgba(255, 255, 255, 0.501);
  }

  .icon {
    font-size: 2em;
  }

  .name {
    margin-top: 10px;
    font-size: 1.2em;
    font-weight: bold;
  }
</style>

<div class="grid-container">
  {techs.map((tech) => (
    <div class="grid-item">
      <div class="icon">{tech.icon}</div>
      <div class="name">{tech.name}</div>
    </div>
  ))}
</div>
