---
// Importa los estilos de Slick Carousel
import 'slick-carousel/slick/slick.css';
import 'slick-carousel/slick/slick-theme.css';
import $ from 'jquery';
import 'slick-carousel';

// Importa la librería de Slick Carousel
import slick from 'slick-carousel';

// Lista de tecnologías de programación con emojis
const technologies = [
  { name: 'JavaScript', emoji: '💻' },
  { name: 'D365 F&O', emoji: '💼' },
  { name: 'Astro', emoji: '🚀' },
  { name: 'WordPress', emoji: '📝' },
  { name: 'C#', emoji: '📦' },
  { name: 'PHP', emoji: '🐘' },
  { name: 'SQL', emoji: '🗄️' },
  { name: 'Tailwind CSS', emoji: '🌊' },
  { name: 'Unity', emoji: '🎮' },
  { name: 'React', emoji: '⚛️' },
  { name: 'Bootstrap', emoji: '📚' },
  { name: 'X++', emoji: '🔧' },
  { name: 'Node.js', emoji: '🌲' },
  { name: 'Python', emoji: '🐍' },
];
---

<div class="carousel">
  <div class="carousel-inner">
    {technologies.map(tech => (
      <div class="carousel-item">
        <div class="carousel-emoji">{tech.emoji}</div>
        <div class="carousel-caption">{tech.name}</div>
      </div>
    ))}
  </div>
</div>

<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', () => {
    $('.carousel-inner').slick({
      autoplay: true,
      autoplaySpeed: 2000,
      dots: true,
      infinite: true,
      speed: 1200,
      slidesToShow: 6,
      slidesToScroll: 2,
      responsive: [
        {
          breakpoint: 1024, // tablet
          settings: {
            slidesToShow: 4,
            slidesToScroll: 2,
            infinite: true,
            dots: true
          }
        },
        {
          breakpoint: 768, // mobile landscape
          settings: {
            slidesToShow: 3,
            slidesToScroll: 1,
            infinite: true,
            dots: true
          }
        },
        {
          breakpoint: 480, // mobile portrait
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1,
            infinite: true,
            dots: true
          }
        }
      ]
    });
  });
</script>

<style>
  .carousel {
    width: 100%;
    position: relative;
    margin-top: 4rem;
  }
  .carousel-inner {
    width: 100%;
    border: solid rgba(255, 255, 255, 0.355) 1px;
    border-radius: 1.2rem;
  }
  .carousel-item {
    text-align: center;
    font-size: 40px; /* Tamaño del emoji */
    margin: 1.7rem;
    background-color: rgba(180, 180, 180, 0.150);
    border-radius: 1rem;
  }
  .carousel-caption {
    margin-top: 10px;
    font-size: 16px;
    font-weight: bold;
  }
  .carousel-emoji {
    font-size: 50px; /* Tamaño del emoji */
  }
</style>
