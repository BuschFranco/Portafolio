<div id="chat-container">
    <h5 id="toggle-chat">Asistencia Online</h5>
    <iframe
        src="https://www.chatbase.co/chatbot-iframe/415G7YDoQsSLz2aURCaX-"
        frameborder="0"
    ></iframe>
</div>

<style>
    #chat-container {
        z-index: 99;
        position: fixed;
        width: 30rem;
        height: 40rem;
        bottom: -36.3rem; /* Chat oculto */
        right: 0;
        transition: bottom 0.3s ease; /* Animaci√≥n suave */
    }

    iframe {
        width: 100%;
        height: 100%;
    }

    h5 {
        backdrop-filter: blur(10px);
        padding: 1rem;
        background-color: rgba(137, 43, 226, 0.404);
        border-radius: 0.5rem 0.5rem 0 0;
        cursor: pointer;

        border: solid 1px rgba(255, 255, 255, 0.205);
    }

    @media (max-width: 768px) {
        #chat-container {
            width: 100%;
        }

        h5 {
            border-radius: 0; /* Eliminar bordes redondeados */
        }
    }
</style>

<script>
    const toggleChat = document.getElementById('toggle-chat');
    const chatContainer = document.getElementById('chat-container');
    let isOpen = false;

    toggleChat.addEventListener('click', function() {
        if (isOpen) {
            chatContainer.style.bottom = '-36.3rem'; // Ocultar chat
        } else {
            chatContainer.style.bottom = '1.3rem'; // Mostrar chat
        }
        isOpen = !isOpen;
    });
</script>
